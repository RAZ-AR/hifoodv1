# ==================================
# TELEGRAM BOT CONFIGURATION
# ==================================

# Токен бота от @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ==================================
# SERVER CONFIGURATION
# ==================================

# Порт для запуска сервера
PORT=3000

# Режим работы (development, production)
NODE_ENV=development

# ==================================
# DATA PROVIDER
# ==================================

# Выберите провайдер: google_sheets или supabase
DATA_PROVIDER=google_sheets

# ==================================
# GOOGLE SHEETS (если используете)
# ==================================

# ID Google таблицы
GOOGLE_SHEET_ID=your_sheet_id_here

# Email сервисного аккаунта Google
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account@project.iam.gserviceaccount.com

# Приватный ключ сервисного аккаунта (в кавычках)
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ==================================
# SUPABASE (если используете)
# ==================================

# URL проекта Supabase
SUPABASE_URL=https://your-project.supabase.co

# API ключ Supabase (anon key)
SUPABASE_KEY=your_supabase_anon_key_here

# ==================================
# CORS CONFIGURATION
# ==================================

# Разрешенные домены для CORS (через запятую)
ALLOWED_ORIGINS=https://raz-ar.github.io,http://localhost:5173
